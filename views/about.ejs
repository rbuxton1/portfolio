<html>
  <head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Ryan Buxton </title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script type="text/javascript">
      var abouts = <%- JSON.stringify(info); %>
      var pos = 0;

      $(document).ready(function() {
        $("#title").html(abouts[pos].title);
        $("#content").html(abouts[pos].content);

        $("#forward").click(function(){
          if(pos < abouts.length - 1) pos++;
          else pos = 0;
          $("#title").html(abouts[pos].title);
          $("#content").html(abouts[pos].content);
        });
        $("#backward").click(function(){
          if(pos > 0) pos--;
          else pos = abouts.length - 1;
          $("#title").html(abouts[pos].title);
          $("#content").html(abouts[pos].content);
        });
      });
    </script>
  </head>
  <body class="about-background w3-display" style="width: 100%; height: 100%;">

    <div id="about-content" class="w3-display-middle w3-center" style="width:90%; max-width: 350px; max-height: 500px;">
      <div class="w3-round-xlarge w3-border w3-border-white w3-text-white" style="background: rgba(0, 0, 0, 0.5); overflow: auto; width:90%; max-width: 350px; max-height: 500px; margin: auto;">
        <h1 id="title"></h1>
        <div id="content"></div>

        <div class="w3-cell-row w3-white">
          <div class="w3-container w3-cell">
            <button class="w3-btn" style="width:100%;" id="backward">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
              </svg>
            </button>
          </div>

          <div class="w3-container w3-cell">
            <button class="w3-btn" style="width:100%;" id="forward">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
              </svg>
            </button>
          </div>

        </div>
      </div>
    </div>

  </body>
</html
