<html>
  <head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Ryan Buxton </title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
      var strings = ["Hi, I'm Ryan.", "I like computers.", "I make cool things with them.", "<a href='/about'>Lets take a look.</a>"];
      var pos = 0;

      $(document).ready(function(){
        $("#message").text(strings[0]);
        pos++;

        setInterval(function() {
          if(pos < strings.length){
            $("#container").fadeOut("slow", function() {
              $("#message").html(strings[pos]);
              $("#container").fadeIn("slow", function() {
                pos++;
              });
            });
          }
        }, 3000);
      });
    </script>

  </head>
  <body class="main-background">
    <div class="w3-display-container" style="width:100%;height:100%;">
      <div class="w3-display-middle">
        <div class="w3-container w3-text-white w3-round w3-border w3-border-white" style="max-width: 500px; background: rgba(0, 0, 0, 0.5);" id="container">
          <h1 class="w3-center" id="message">
          </h1>
        </div>
      </div>
    </div>
  </body>
</html
